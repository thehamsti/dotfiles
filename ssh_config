# Host bastion
#     HostName bastion.example.com
#     User admin
#     IdentityFile ~/.ssh/bastion_key

# Example: Server behind bastion
# Host internal
#     HostName 10.0.0.50
#     User admin
#     ProxyJump bastion

# Example: AWS EC2 instance
# Host aws-web
#     HostName ec2-xx-xxx-xxx-xx.compute-1.amazonaws.com
#     User ec2-user
